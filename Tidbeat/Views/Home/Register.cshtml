@using Tidbeat.Controllers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	Console.WriteLine(ViewBag.RegisterPhase);
    
}
<div class="text-center d-flex flex-column temporary-margin">
    <div class="display-4 text-primary">Regista-te no TidBeat!</div>
    @if (ViewBag.RegisterPhase == EnumRegisterPhase.Begin)
    {
        <form class="mt-3 mx-auto w-25">
            <label for="registerUserField" class="form-label text-primary mb-0">Nome de Utilizador</label>
            <input type="text" class="form-control mt-0" id="registerUserField">

            <label for="registerEmailField" class="form-label text-primary mt-3 mb-0">Email</label>
            <input type="email" class="form-control mt-0" id="registerEmailField">
            
            <label for="registerPasswordField" class="form-label text-primary mt-3 mb-0">Palavra-Passe</label>
            <input type="password" class="form-control mt-0" id="registerUserField">

            <label for="registerConfirmPasswordField" class="form-label text-primary mt-3 mb-0">Confirmar Palavra-Passe</label>
            <input type="password" class="form-control mt-0" id="registerConfirmPasswordField">

            <div class="d-flex flex-row justify-content-evenly mt-5 w-auto">
                <button type="submit" class="btn btn-primary mr-5" href=@Url.Action("Register", "Home", new {phase = EnumRegisterPhase.End})>Continuar Registo</button>
                <button type="submit" class="btn btn-primary ml-5">Efetuar Login</button>
            </div>
            
        </form>
    }
    else
    {
        <div>test</div>
    }
</div>
