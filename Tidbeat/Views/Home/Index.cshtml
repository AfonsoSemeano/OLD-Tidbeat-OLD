@using Tidbeat.Controllers

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center d-flex flex-column temporary-margin">
    <h3 class="display-4 text-primary">Faz login no TidBeat</h3>
    <form class="w-25 mx-auto d-flex flex-column">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label text-primary">Nome de Utilizador / Email</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">Nunca partilharemos o seu email com outros.</div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label text-primary">Palavra-Passe</label>
            <input type="password" class="form-control" id="exampleInputPassword1">
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Lembrar a minha palavra-passe</label>
        </div>
        <div class="border border-2 border-primary rounded-3 w-20 d-flex align-self-center justify-content-center mb-3">
            <img src="~/images/GoogleIcon.png" width="60" height="55"/>
        </div>
        <button type="submit" class="btn btn-primary">Efetuar Login</button>
        <a class="mt-3" href=@Url.Action("Register", "Home")>Não tenho conta no TidBeat. Criar conta.</a>
    </form>
</div>
